<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.MainWindowController">
        <MenuBar layoutX="146.0" layoutY="181.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" text="Save As..." />
                    <MenuItem mnemonicParsing="false" text="Load..." />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Quit" />
                </Menu>
                <Menu mnemonicParsing="false" text="Find">
                    <MenuItem mnemonicParsing="false" text="Search..." />
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" text="Get Help" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="About" />
                </Menu>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </MenuBar>
        <VBox layoutY="35.0" prefHeight="465.0" prefWidth="700.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0">
                    <children>
                        <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="283.0" promptText="Type Item Serial Number or Description" />
                        <Button fx:id="searchButton" mnemonicParsing="false" text="Search...." />
                    </children>
                </HBox>
                <TableView fx:id="tableView">
                    <columns>
                        <TableColumn fx:id="itemSerialNumberColumn" prefWidth="200.0" text="Serial Number" />
                        <TableColumn fx:id="itemNameColumn" prefWidth="300.0" text="Item Name" />
                        <TableColumn fx:id="itemValueColumn" prefWidth="159.0" text="Value" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox prefHeight="50.0" spacing="5.0">
                    <children>
                        <TextField fx:id="itemSerialNumberTextField" promptText="Item Serial Number" />
                        <TextField fx:id="itemNameTextField" prefHeight="25.0" prefWidth="270.0" promptText="Item Name" />
                        <TextField fx:id="itemValueTextField" prefHeight="25.0" prefWidth="134.0" promptText="Item Price" />
                        <Button fx:id="addNewItemButton" mnemonicParsing="false" onAction="#addNewItemButtonClicked" text="Add New Item" />
                    </children>
                </HBox>
      <HBox layoutX="30.0" layoutY="375.0" prefHeight="60.0" prefWidth="660.0" spacing="5.0">
         <children>
            <Label fx:id="serialNumErrorLabel" alignment="CENTER" prefWidth="149.0" textFill="#f20a0a" wrapText="true">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
            <Label fx:id="nameErrorLabel" alignment="CENTER" prefWidth="270.0" textFill="#f20a0a">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
            <Label fx:id="priceErrorLabel" alignment="CENTER" prefWidth="134.0" textFill="#f20a0a">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                    <children>
                        <Button fx:id="deleteSelectedItemButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="149.0" text="Delete Selected Item" />
                    </children>
                </HBox>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
</AnchorPane>
